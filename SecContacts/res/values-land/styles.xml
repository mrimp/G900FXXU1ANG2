    </style>
    <style name="FragmentActionBarPadding">
        <item name="android:paddingBottom">0.0dip</item>
    </style>
    <style name="ContactDetailTheme" parent="@style/Contact.Theme.DeviceDefault" />
    <style name="quickcontact_display_name_text" parent="@style/detail_display_name_text">
        <item name="android:textSize">19.0dip</item>
    </style>
    <style name="quickcontact_detail_company_text" parent="@style/detail_company_text">
        <item name="android:textSize">14.0dip</item>
    </style>
    <style name="DialpadThirdButtonStyle">
        <item name="android:layout_width">@dimen/dialpad_button_width</item>
        <item name="android:layout_height">@dimen/dialpad_button_height</item>
        <item name="android:layout_marginTop">@dimen/dialpad_button_margin</item>
        <item name="android:layout_marginRight">@dimen/dialpad_button_margin</item>
    </style>
