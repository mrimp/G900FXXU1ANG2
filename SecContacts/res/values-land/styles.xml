    <style name="EasyPeopleTheme" parent="@style/EasyPeopleBaseTheme">
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:twActionBarTabsSize">@dimen/action_bar_tab_height</item>
    </style>
    <style name="ConfirmAddDetailViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="ConfirmAddDetailHeaderViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
